<Window x:Class="TermProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TermProject"
        xmlns:System="clr-namespace:ContactLibrary;assembly=ContactLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.Resources>

            <Style TargetType="Button" x:Key="Btn">
                <Setter Property="Margin" Value="0 30 0 0" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Margin" Value="7"/>
            </Style>

            <Style TargetType="Button" x:Key="OperationsBtn">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Margin" Value="0 10"/>
                <Setter Property="Width" Value="150"/>
            </Style>

        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="2.png"/>
                    <TextBlock Text="Contacts" FontWeight="Bold"/>
                </StackPanel>
            </Label>
            <Button Grid.Column="1" Click="Add" Style="{ StaticResource OperationsBtn }">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Add New Contact" FontSize="11"/>
                    <Image Source="1.png"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Click="ImportCSV" Width="180" Style="{ StaticResource OperationsBtn }">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Import Contacts from CSV" FontSize="11" />
                    <Image Source="6.png" />
                </StackPanel>
            </Button>
            <Button Grid.Column="3" Click="ExportCSV" Width="180" Style="{ StaticResource OperationsBtn }">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Export Contacts to CSV" FontSize="11"/>
                    <Image Source="5.png"/>
                </StackPanel>
            </Button>
        </Grid>

        <ListBox Grid.Row="1" x:Name="ContactsList" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type System:Contact}">

                    <Grid Margin="5">
                        <Expander Name="ExpanderControl" Header="{Binding FirstName}" FontSize="15" Margin="7">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200*"/>
                                    <ColumnDefinition Width="200*"/>
                                    <ColumnDefinition Width="200*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="First Name:"/>
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Last Name:"/>
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Phone Number:"/>
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding FirstName}"/>
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding LastName}"/>
                                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding PhoneNumber}"/>

                                <Button Grid.Column="2" Grid.Row="0" Style="{ StaticResource Btn }" DataContext="{ Binding ID }" Click="Edit">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="3.png"/>
                                        <TextBlock Text="Edit" FontSize="11" />
                                    </StackPanel>
                                </Button>
                                <Button Grid.Column="2" Grid.Row="1" Style="{ StaticResource Btn }" DataContext="{ Binding ID }" Click="Delete">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="4.png"/>
                                        <TextBlock Text="Delete" FontSize="11" />
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </Expander>
                    </Grid>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
