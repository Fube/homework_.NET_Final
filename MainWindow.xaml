<Window x:Class="TermProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TermProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="E:\islam\Pictures\2.png" Height="45" Width="45" />
                <TextBlock Text="Contacts" FontSize="20" FontWeight="Bold" Margin="7,7,185,0"/>
                <ListViewItem>
                    <Button Click="Add_Contact" Height="35" Width="35" Margin="0,0,0,0">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="E:\islam\Pictures\1.png"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                </ListViewItem >
                <Popup VerticalOffset="50" HorizontalOffset="-160" x:Name="StandardPopup" >
                    <Border BorderThickness="2" Width="700" Height="200" Background="White" BorderBrush="Black">
                        <Grid>
                            <TextBlock HorizontalAlignment="Center" Text="Add A New Contact" FontSize="20"/>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Margin="0,20,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Enter the first name: " FontSize="15" HorizontalAlignment="Left" Foreground="Black"/>
                                    <TextBox Grid.Row="0" x:Name="Add_fName" FontSize="15" Width="500" HorizontalAlignment="Right" Margin="180,0,0,0"/>
                                    <TextBlock Grid.Row="1" Text="Enter the last name: " FontSize="15" HorizontalAlignment="Left" Foreground="Black"/>
                                    <TextBox Grid.Row="1" x:Name="Add_lName" FontSize="15" Width="500" HorizontalAlignment="Right" Margin="180,0,0,0"/>
                                    <TextBlock Grid.Row="2" Text="Enter the phone number: " FontSize="15" HorizontalAlignment="Left" Foreground="Black"/>
                                    <TextBox Grid.Row="2" x:Name="Add_phoneNumber" FontSize="15" Width="500" HorizontalAlignment="Right" Margin="180,0,0,0"/>
                                    <Button Grid.Row="3" Content="Save" FontSize="15" Click="Save_Add_Contact" HorizontalAlignment="Center" Margin="0,30,100,0"/>
                                    <Button Grid.Row="3" Content="Close" FontSize="15" Click="Close_Add_Contact" HorizontalAlignment="Center" Margin="100,30,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Popup>
            </StackPanel>
        </Label>

        <ListBox Grid.Row="1" x:Name="ContactsList" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Expander Name="ExpanderControl" Header="{Binding fName}" FontSize="15" Margin="7">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200*"/>
                                    <ColumnDefinition Width="200*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="0" Text="First Name:" FontSize="15" Margin="7"/>
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Last Name:" FontSize="15" Margin="7"/>
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Phone Number:" FontSize="15" Margin="7"/>
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding fName}" FontSize="15" Margin="7"/>
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding lName}" FontSize="15" Margin="7"/>
                                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding phoneNumber}" FontSize="15" Margin="7"/>
                            </Grid>
                        </Expander>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

